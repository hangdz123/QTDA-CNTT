@model QLQP.Models.SanPham
@using QLQP.Models
@{
    ViewBag.Title = "Chi Tiết";
    Layout = "~/Views/Share/_LayoutPage1.cshtml";
    WebNCEntities1 db = new WebNCEntities1();
    NhaCungCap ncc = db.NhaCungCaps.Find(Model.idNCC);

}
@if (Model == null)
{
    <div class="col-lg-5 mt-5">
        Sản Phẩm Không Tồn Tại
    </div>
}
else
{
    <section class="bg-light">
        <div class="container pb-5">
            <div class="row">
                <div class="col-lg-5 mt-5">
                    <div class="card mb-3">
                        <img class="card-img img-fluid" src="@Model.Img" alt="Card image cap" id="product-detail">
                    </div>
                    <div class="row">
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="prev">
                                <i class="text-dark fas fa-chevron-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </div>
                        <!--End Controls-->
                        <!--Start Carousel Wrapper-->
                        <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                            <!--Start Slides-->
                            <div class="carousel-inner product-links-wap" role="listbox">

                                <!--First slide-->
                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-4">
                                            <a href="#">
                                                <img style="max-width:100%;height:auto" src="@Model.Img" alt="Product Image 1">
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                <img style="max-width:100%;height:auto" src="@Model.Img" alt="Product Image 2">
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                <img style="max-width:100%;height:auto" src="@Model.Img" alt="Product Image 3">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!--/.First slide-->
                                <!--Second slide-->
                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-4">
                                            <a href="#">
                                                <img style="max-width:100%;height:auto" src="@Model.Img" alt="Product Image 4">
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                <img style="max-width:100%;height:auto" src="@Model.Img" alt="Product Image 5">
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                <img style="max-width:100%;height:auto" src="@Model.Img" alt="Product Image 6">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!--/.Second slide-->
                                <!--Third slide-->
                                <div class="carousel-item active">
                                    <div class="row">
                                        <div class="col-4">
                                            <a href="#">
                                                <img style="max-width:100%;height:auto" src="@Model.Img" alt="Product Image 7">
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                <img style="max-width:100%;height:auto" src="@Model.Img" alt="Product Image 8">
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                <img style="max-width:100%;height:auto" src="@Model.Img" alt="Product Image 9">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!--/.Third slide-->
                            </div>
                            <!--End Slides-->
                        </div>
                        <!--End Carousel Wrapper-->
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="next">
                                <i class="text-dark fas fa-chevron-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!--End Controls-->
                    </div>
                </div>
                <!-- col end -->
                <div class="col-lg-7 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h2">@Model.TenSanPham</h1>
                            <p class="h3 py-2">@Model.Gia vnđ</p>
                            <p class="py-2">
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-secondary"></i>
                                <span class="list-inline-item text-dark">Rating 4.8 | 36 Comments</span>
                            </p>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h6>Brand:</h6>
                                </li>
                                <li class="list-inline-item">
                                    <p class="text-muted">
                                        @if(ncc != null)
                                         {
                                             <strong>@ncc.TenNCC</strong>
                                         }
                                    </p>
                                </li>
                            </ul>

                            <h6>Mô tả:</h6>
                            <p>@Model.MoTa</p>


                            <h6>Có thể bạn quan tâm:</h6>
                            <ul class="list-unstyled pb-3">
                                <li><a href="#" style="color: red; text-decoration: none">AF coil dành cho Flexus</a> </li>
                                <li><a href="#" style="color: red; text-decoration: none">Tinh dầu saltni cai thuốc</a> </li>
                                <li><a href="#" style="color: red; text-decoration: none">Pod 1 lần tiện lợi</a> </li>
                            </ul>

                            <form action="" method="GET">
                                <input type="hidden" name="product-title" value="Activewear">
                                <div class="row">
                                    <div class="col-auto">
                                        <ul class="list-inline pb-3">
                                            <li class="list-inline-item">
                                                Màu Sắc :
                                                <input type="hidden" name="product-size" id="product-size" value="S">
                                            </li>
                                            
                                        </ul>
                                    </div>
                                    <div class="col-auto">
                                        <ul class="list-inline pb-3">
                                            <li class="list-inline-item text-right">
                                                Số Lượng :
                                                <input type="hidden" name="product-quanity" id="product-quanity" value="1">
                                            </li>
                                            <li class="list-inline-item"><span class="btn btn-success" id="btn-minus">-</span></li>
                                            <li class="list-inline-item"><span class="badge bg-secondary" id="var-value">1</span></li>
                                            <li class="list-inline-item"><span class="btn btn-success" id="btn-plus">+</span></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="row pb-3">
                                    <div class="col d-grid">
                                        <button type="submit" class="btn btn-success btn-lg" name="submit" value="buy">Thanh Toán</button>
                                    </div>
                                    <div class="col d-grid">
                                        @*<button type="submit" class="btn btn-success btn-lg" name="submit" value="addtocard">Thêm Vào Giỏ</button>*@
                                        @Html.ActionLink("Thêm Vào Giỏ", "ThemVaoGio", "GioHang", new { SanPham_ID = Model.ID }, new { @class = "btn btn-success btn-lg" })
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


