@model QLQP.Models.DangNhapKH

@{
    ViewBag.Title = "Đăng Kí";
    Layout = "~/Views/Share/_LayoutPage1.cshtml";
}
<link rel="stylesheet" href="/Theme/css/DangNhap.css">
<section>
    <!--Bắt Đầu Phần Nội Dung-->
    <div class="noi-dung">
        <div class="form">
            <h2>Trang Đăng KÍ</h2>
            @Html.ValidationSummary(false)
            @using (Html.BeginForm())
            {
                <div class="input-form">
                    <span>Tên Người Dùng</span>
                    @Html.TextBoxFor(x => x.TenDangNhap)
                </div>
                <div class="input-form">
                    <span>Mật Khẩu</span>
                    @Html.PasswordFor(x => x.MatKhau)
                </div>
                <div class="nho-dang-nhap">
                    <label><input type="checkbox" name="">Nhớ Mật Khẩu</label>
                </div>
                <div class="input-form">
                    <input type="submit" value="Đăng Kí">
                </div>
            
            }
            <h3>Đăng Nhập Bằng Mạng Xã Hội</h3>
            <ul class="icon-dang-nhap">
                <a href="https://www.facebook.com/"><img src="~/Theme/img/fb.png"></a>
                <a href="https://myaccount.google.com/"><img src="~/Theme/img/gg.png"></a>
            </ul>
        </div>
    </div>
    <!--Kết Thúc Phần Nội Dung-->
</section>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
