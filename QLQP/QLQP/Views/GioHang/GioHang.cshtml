@model List<QLQP.Models.GioHang>
@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Share/_LayoutPage1.cshtml";
}
<!--css-->
<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
<meta name="description" content="">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="shortcut icon" href="/Theme/GioHang/images/favicon.png">

<link href='http://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,500,700,500italic,100italic,100' rel='stylesheet' type='text/css'>
<link href="/Theme/GioHang/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="/Theme/GioHang/css/flexslider.css" type="text/css" media="screen" />
<link href="/Theme/GioHang/css/style.css" rel="stylesheet" type="text/css">
<!--endcss-->



<div class="container_fullwidth">
    <div class="container shopping-cart">
        <div class="row">
            <div class="col-md-12">
                <h3 class="title">
                    Giỏ Hàng
                </h3>
                <div class="clearfix">
                </div>
                <table class="shop-table">
                    <thead>
                        <tr>
                            <th>
                                Ảnh
                            </th>
                            <th>
                                Chi Tiết
                            </th>
                           
                            <th>
                                Số lượng
                            </th>
                            <th>
                                Giá
                            </th>
                            <th>
                                Xóa
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                <img src="@item.CTSanPham.Img" alt="">
                            </td>
                            <td>
                                <div class="shop-details">
                                    <div class="productname">
                                        @item.CTSanPham.TenSanPham

                                    </div>
                                    <p>
                                        <img alt="" src="/Theme/GioHang/images/star.png">
                                        <a class="review_num" href="#">
                                            02 Review(s)
                                        </a>
                                    </p>
                                    <div class="color-choser">
                                        <span class="text">
                                            Product Color :
                                        </span>
                                        <ul>
                                            <li>
                                                <a class="black-bg " href="#">

                                                </a>
                                            </li>
                                            <li>
                                                <a class="red-bg" href="#">

                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <p>
                                        Product Code :
                                        <strong class="pcode">
                                            Dress 120
                                        </strong>
                                    </p>
                                </div>
                            </td>
                           
                            <td>
                                <input style="width:100px;" type="text" value="@item.SoLuong" />
                            </td>
                            <td>
                                <h5>
                                    <strong class="red">
                                        @Html.FormatValue((item.CTSanPham.Gia * item.SoLuong),"{0:#,0}") vnđ
                                    </strong>
                                </h5>
                            </td>
                            <td>
                               
                                <a href="#">
                                    <img src="/Theme/GioHang/images/remove.png" alt="">
     
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="6">
                                <button class="pull-left">
                                    <a style="color:black;" href="/Shop/CuaHang">Tiếp Tục Mua</a>
                                </button>
                                <button class=" pull-right">
                                    Update Shopping Cart
                                </button>
                            </td>
                        </tr>
                    </tfoot>
                </table>
                <div class="clearfix">
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-6">
                        <div class="shippingbox">
                            <div class="subtotal">
                                <h5>
                                    Tổng Tiền
                                </h5>
                                <span>
                                    @Html.FormatValue(Model.Sum(x => x.SoLuong * x.CTSanPham.Gia), "{0:#,0}") vnđ
                                </span>
                            </div>
                            <button>
                                <a style="color:black;" href="#">Thanh Toán</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




<!--js-->
<script type="text/javascript" src="/Theme/GioHang/js/jquery-1.10.2.min.js">
</script>
<script type="text/javascript" src="/Theme/GioHang/js/bootstrap.min.js">
</script>
<script defer src="/Theme/GioHang/js/jquery.flexslider.js">
</script>
<script type="text/javascript" src="/Theme/GioHang/js/jquery.carouFredSel-6.2.1-packed.js">
</script>
<script type="text/javascript" src="/Theme/GioHang/js/script.min.js">
</script>
<!--endjs-->