@model IEnumerable<QLQP.Models.SanPham>

@{
    ViewBag.Title = "Trang Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Quản Lý Hàng Hóa</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/Admin/Home/TrangChu">Trang Chủ</a>
            </li>
            <li class="active">
                <strong>Hàng Hóa</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <b>Tên Sản Phẩm</b>
        </th>
        <th>
            <b>Giá</b>
        </th>
        <th>
            <b>Mô Tả</b>
        </th>
        <th>
            <b>Ngày Nhập</b>
        </th>
        <th>
            <b>Ảnh</b>
        </th>
        <th>
            <b>Loại Sản Phẩm</b>
        </th>
        <th>
            <b>Nhà Cung Cấp</b>
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayNhap)
            </td>
            <td>
                <img style="width:50px; height:50px" src="~/Theme/img/@item.Img" />
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaCungCap.TenNCC)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
